<%= form_with(model: business, local: true) do |form| %>
  <% if business.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(business.errors.count, "error") %> prohibited this business from being saved:</h2>

      <ul>
      <% business.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :business_title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :business_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= select_tag(:business_category_id, options_for_select(@business_categories), :prompt => "Choose a Category", :class => "form-control") %>
  </div>


  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, id: :business_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city, id: :business_city, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :state %>
    <%= select_tag(:state_id, options_for_select(@states), :prompt => "Choose a State", :class => "form-control") %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :business_email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :hours %>
    <%= form.text_field :hours, id: :business_hours, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :number %>
    <%= form.text_field :number, id: :business_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :picture %>
    <%= form.file_field :picture, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
