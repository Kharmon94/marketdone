<p id="notice"><%= notice %></p>

<div class="row" style="margin-top: 3%;">
      <div class="form-group">
          <%= render 'search_form' %>
      </div>
</div>

<div class="row" style="margin-top: 3%">
	<strong><h5>If map is not showing plaese refresh the page. Thank You!</h5></strong>
</div>

<div class="row">
	<div class="col-md-12 center" align="center">
		<div class="usa" id="map"></div>
	</div>
</div>

<div class="row" style="margin-top: 3%">
	<div class="col-md-12" align="center">
		<h3>Businesses</h3>
	</div>
	<div class="col-md-12">
		<%= form_tag businesses_path, method: 'get' do %>
			<div class="col-md-4 form-group">
				<%= label_tag :business_category %>
			  	<%= select_tag(:business_category, options_from_collection_for_select(BusinessCategory.all, :id, :name, params[:business_category]), { include_blank: true }) %>
			</div>
			<div class="col-md-4 form-group">
				<%= label_tag :state %>
			  	<%= select_tag(:state, options_from_collection_for_select(State.all, :id, :name, params[:state]), { include_blank: true }) %>
			</div>

			 <%= submit_tag "submit", :name => nil, :class => "btn btn-primary" %>      
		<% end %>
	</div>

</div>




<div class="row">
	<div class="col-md-12" align="center">
	  	<table class="table table-striped table-bordered">
			
	  		<tr>
			    <th class="center">Image</th>
			    <th class="center">Name</th>
			    <th class="center">Description</th>
			    <th class="center">Owner</th>
			    <th class="center">City</th>
			</tr>
			
			<% @businesses.each do |business| %>

			<tr>
				<th>
					<%= link_to business do %>
	       				<%= image_tag(business.image.url(:thumb), :class => "thumbs") %>
	    			<% end %>
				</th>

				<th>
					<h3><%= business.title %></h3>
				</th>

				<th>
					<p><%= business.description %></p>
				</th>

				<th>
					<strong><p><em>Owner:</em> <%= link_to business.user.profile.username, profile_path(current_user) %></p></strong>
				</th>

				<th>
					<p> <%= business.city %></p>
				</th>

						
			</tr>

			<% end %> 
	  	</table>
	   
	  </div>
</div>


	

<script type="text/javascript" src="http://yoursite.com/mapdata.js"></script>   
<script  type="text/javascript" src="http://yoursite.com/worldmap.js"></script>

<div class="row">
  <% if user_signed_in? %>
	<%= link_to 'Add Your Business', new_business_path %>
  <% end %>
</div>