<div class="row" align="center">
	<div class="col-md-12" align="center">
	  <img src="https://s3.us-east-2.amazonaws.com/ypmarketnew/assets/blkbuzservcblkgold.png" style="width: 250px; height: 250px" >
	</div>
</div>


<p id="notice"><%= notice %></p>

<div class="row" style="margin-top: 3%;">
      <div class="form-group">
          <%= render 'search_form' %>
      </div>
</div>




<div class="row">
	<div class="col-md-12 center" align="center">
		
		<script type="text/javascript" src="http://yoursite.com/mapdata.js"></script>   
		<script  type="text/javascript" src="http://yoursite.com/worldmap.js"></script>

		<div class="usa" id="map"></div>

	</div>
</div>

<div class="row" style="margin-top: 3%">
	<div class="col-md-12 center" align="center">
			<strong><h5>If map is not showing please press this button. Thank You!</h5></strong>
			        <div>
			          <button class="btn" style="background-color: #D4AF37; color: black;" onclick="myFunction()">Reload</button>

			          <script>
			            function myFunction(){
			              location.reload();
			            }
			          </script>
			        </div>
			<strong><h4>Double Click your state to find business near you!</h4></strong>
	</div>
</div>


<div class="row" style="margin-top: 3%">

		<%= form_tag businesses_path, method: 'get' do %>
			<div class="col-md-3 form-group" style="color: #D4AF37">
				<%= label_tag :business_category %>
			  	<%= select_tag(:business_category, options_from_collection_for_select(BusinessCategory.all, :id, :name, params[:business_category]), { include_blank: true }) %>
				<br>
				<br>
				<%= label_tag :state %>
			  	<%= select_tag(:state, options_from_collection_for_select(State.all, :id, :name, params[:state]), { include_blank: true }) %>
				<br>
				<br>
				<%= submit_tag "submit", :name => nil, :class => "btn btn-primary", :style => "background-color: #D4AF37; color: black;" %>  
			</div>

			     
		<% end %>
		
		<div class="col-md-9" align="center">
	  	<table class="table">
			
	  		<tr>
			    <th class="center"></th>
			    <th class="center">Name</th>
			    <th class="center">Description</th>
			    <th class="center">Category</th>
			    <th class="center">Owner</th>
			    <th class="center">City</th>
			     <th class="center">State</th>
			</tr>
			
			<% @businesses.each do |business| %>

			<tr class="business_table">
				<th style="background-color: #D4AF37;">
					<%= link_to business do %>
	       				<%= image_tag(business.image.url(:thumb), :class => "thumbs") %>
	    			<% end %>
				</th>

				<th>
					<h3><%= link_to business.title, business_path(business), style: "color: #D4AF37;" %></h3>
				</th>

				<th>
					<p><%= business.description %></p>
				</th>

				<th>
					<p><%= business.business_category.name %></p>
				</th>

				<th>
					<strong><p><em>Owner:</em> <%= link_to business.user.username, user_path(business.user), style: "color: #D4AF37;" %></p></strong>
				</th>

				<th>
					<p> <%= business.city %></p>
				</th>
					
				<th>
					<p> <%= business.state.name %></p>
				</th>


						
			</tr>

			<% end %> 
	  	</table>
	     <div class="row" style="margin-left: 5%">
      		<%= paginate @businesses %>
   		 </div>
	  </div>

</div>

</div>








	

<script type="text/javascript" src="http://yoursite.com/mapdata.js"></script>   
<script  type="text/javascript" src="http://yoursite.com/worldmap.js"></script>

<div class="row">
  <% if user_signed_in? %>
	<%= link_to 'Add Your Business', new_business_path %>
  <% end %>
</div>