<div class="row">
  <div class="col-md-4" style="color: #D4AF37" align="center">
    <div>
      <%= image_tag @product.image.url, style: "width: 80%; height: 80%;" %>
    </div>
    <h3><%= @product.title %></h3>
    <h4><%= number_to_currency(@product.price) %></h4>
  </div>
  <div class="col-md-5 pull-right">


   <%= form_for([@product, @order], :html => {id: "order_form"})  do |f| %>
      

   
        <%= hidden_field_tag "product_id", @product.id %>
        <%= hidden_field_tag 'stripeToken' %>
        <%= hidden_field_tag 'stripeEmail' %>

       

          <% if @order.errors.any? %>
            <div id="error_explanation" class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <h4><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h4>

              <ul>  
              <% @order.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

                              <article>
                      <% if flash[:error].present? %>
                        <div id="error_explanation">
                          <p><%= flash[:error] %></p>
                        </div>
                      <% end %>
                    </article>

          <div id="stripe_error" class="alert alert-danger" style="display:none">
            <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
          </div>

          <h3 style="color: #D4AF37;">Please Enter Your Shipping Address:</h3>

          <div class="form-group">
            <%= f.label :address, :style => "color: #D4AF37;" %>
            <%= f.text_field :address, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :city, :style => "color: #D4AF37;" %>
            <%= f.text_field :city, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :state, :style => "color: #D4AF37;" %>
            <%= f.text_field :state, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :zip, :style => "color: #D4AF37;" %>
            <%= f.text_field :zip, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :country, :style => "color: #D4AF37;" %>
            <%= f.country_select :country, {priority_countries: ["US"], include_blank: "select country"}, class: 'form-control' %>
          </div>


                    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                            data-description="NAME: <%= @product.title %>, COLOR: <%= @product.color %> "
                            data-amount="<%= (@product.price + @product.shipping_cost) * 100 %>"
                            <% if user_signed_in? %>
                              data-email="<%= current_user.email %>"
                            <% end %>
                            data-allow-remember-me="true"
                            data-locale="auto">

                    </script>
              
 <% end %>
    <script src="https://checkout.stripe.com/checkout.js"></script>
  </div>
</div>