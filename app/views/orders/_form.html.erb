<div class="row" align="center">
  <div class="col-md-4" style="color: #D4AF37" align="center">
    <div>
      <%= image_tag @product.image.url, style: "width: 80%; height: 80%;" %>
    </div>
    <h3><%= @product.title %></h3>
    <h4 id="price"><%= number_to_currency(@product.price) %></h4>
    <h4 id="s_price"><%= number_to_currency(@product.shipping_cost) %></h4>
    <h4 id="order_total">Total: $<span id="show_total"></span></h4>
     
     <script>
            $(document).ready(function(){
            document.getElementById('submit').onclick=function(){
              var quantity = parseInt(document.getElementById('quantity').value)
              var cost = <%= @product.price %>
              var s_cost = <%= @product.shipping_cost %>
              total = (cost + s_cost) * quantity
              document.getElementById("show_total").innerText = total
            };
           });

            $(document).ready(function(){
              var quantity = parseInt(document.getElementById('quantity').value)
              var cost = <%= @product.price %>
              var s_cost = <%= @product.shipping_cost %>
              total = (cost + s_cost) * quantity 
              document.getElementById("show_total").innerText = total
            });
    </script>
   

  </div>
  <div class="col-md-5 pull-right">


   <%= form_for([@product, @order], :html => {id: "order_form"})  do |f| %>
      

   
        <%= hidden_field_tag "product_id", @product.id %>
        <%= hidden_field_tag 'stripeToken' %>
        <%= hidden_field_tag 'stripeEmail' %>

       

          <% if @order.errors.any? %>
            <div id="error_explanation" class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <h4><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h4>

              <ul>  
              <% @order.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

                              <article>
                      <% if flash[:error].present? %>
                        <div id="error_explanation">
                          <p><%= flash[:error] %></p>
                        </div>
                      <% end %>
                    </article>

          <div id="stripe_error" class="alert alert-danger" style="display:none">
            <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
          </div>

          <h3 style="color: #D4AF37;">Please Enter Your Shipping Address:</h3>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :address, :style => "color: #D4AF37;" %>
                <%= f.text_field :address, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :city, :style => "color: #D4AF37;" %>
                  <%= f.text_field :city, class: "form-control" %>
                </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <%= f.label :state, :style => "color: #D4AF37;" %>
                <%= f.text_field :state, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= f.label :zip, :style => "color: #D4AF37;" %>
                <%= f.text_field :zip, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= f.label :country, :style => "color: #D4AF37;" %>
                <%= f.country_select :country, {priority_countries: ["US"], include_blank: "select country"}, class: 'form-control' %>
              </div>
            </div>
          </div>


         
          

          <div class="row">
            <div class="col-md-6">
                 <div class="form-group" style="color: black">
                  <%= f.label :color, :style => "color: #D4AF37;" %>
                  <%= f.select :color, options_for_select(@product.color_variants.pluck(:color)), :prompt => "Choose a Color", :class => "form-control", :style => "color: black!;" %>

                </div>
            </div>
            <div class="col-md-6">
              <div class="form-group" style="color: black">
                <%= f.label :size, :style => "color: #D4AF37;" %>
                <%= f.select :size, options_for_select(@product.size_variants.pluck(:size)), :prompt => "Choose a Size", :class => "form-control", :style => "color: black!;" %>
              </div>
            </div>
          </div>

          <div class="row" align="center">
                    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                            data-description="NAME: <%= @product.title %>"
                            <% if user_signed_in? %>
                              data-email="<%= current_user.email %>"
                            <% end %>
                            data-allow-remember-me="true"
                            data-locale="auto">

                    </script>
          </div>





          
<div class="row" style="margin-top: 10px">
  <div class="col-md-6">

          <div class="form-group">
            <%= f.label :quantity, :style => "color: #D4AF37;" %>
            <%= f.number_field :quantity, class: "form-control", id: "quantity", value: 1, min: 1, step: 1 %>
          </div>

    </div>

</div>                 
 <% end %>

<div class="row">
  <div class="col-md-6">
   <button id="submit" class="btn btn-success" style="margin-top: 3%">Update Quantity</button> 
  </div>
</div> 




 
    <script src="https://checkout.stripe.com/checkout.js"></script>
  </div>
</div>