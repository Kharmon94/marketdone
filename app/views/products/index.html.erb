  <div class="row" align="center">
    <div class="col-md-12" align="center">
      <img src="https://s3.us-east-2.amazonaws.com/ypmarketnew/assets/STORE+GOLD.png" style="width: 250px; height: 250px" >
    </div>
  </div>

  <div class="row" style="margin-top: 3%;">
      <div class="form-group">
          <%= render 'search_form' %>
      </div>
  </div>

  <div class="row">
    <%= form_tag products_path, method: 'get' do %>
      <div class="col-md-4 form-group">
          <%= label_tag :category %>
          <%= select_tag(:category, options_from_collection_for_select(Category.all, :id, :name, params[:category]), { include_blank: true }) %>
           <%= submit_tag "submit", :name => nil, :class => "btn btn-primary" %>  
      </div>
    <% end %>
  </div>
  
  <div class="row" id="prod_row">
    

    <div class="col-md-9" align="center">
        <% @products.each do |product| %>
          <div  id="t_backdrop">
            <!-- <div id="thumbnail_p"> -->
                <div class="col-md-3
                " style="margin-top: 2%; height: 80% !important">
                  <div class="thumbnail" style="height: 50% !important">
                  <%= link_to product do %>
                    <div style=" height: 110% !important">
                      <%= image_tag(product.image.url(:thumb), :class => "thumbs", :id => "thumbs") %>
                    </div>
                     
                  <% end %>
                    <div class="caption" align="center" style="width: 125px; height: 350px; padding: 3%; word-wrap: break-word">
                      <h4><%= product.title %></h4>
                      <p><%= number_to_currency(product.price) %></p>
                      <p><%= link_to product.category.name, category_path(product.category) %></p>
                      <p><em>Sold By:</em> <%= link_to product.user.username, user_path(product.user) %></p>
                    </div>
                  </div>
                </div>
            <!--     </div> -->
              <% end %> 
          
          </div> 
    </div>

    <div class="row" style="margin-left: 5%">
      <%= paginate @products %>
    </div>
    
 </div>     


