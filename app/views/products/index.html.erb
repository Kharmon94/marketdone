  <div class="row" id="prod_row">
      <div class="col-xs-3 form-group left" id="catrow" class="dropdown-menu" data-aos="fade-right" data-aos-duration="1000">

          <br>
          <br>
          <br>

          <%= form_tag products_path, method: 'get' do %>
              <h3>Search A Product</h3>
              <%= text_field_tag :search, params[:search], class: "form-control" %>
              <br>
             
              <h3>Filter Products:</h3>
              <br>
              <br>
              <%= label_tag :category %>
              <div style="color: black; width: 20px;">
               <%= select_tag(:category, options_from_collection_for_select(Category.all, :id, :name, params[:category]), { include_blank: true, class: "catcat", style: "width: 283px" }) %> 
              </div>
              
              <br>
              <br>
              <%= label_tag :min_price %>
              <div style="color: black">
              <%= number_field_tag :min_price, params[:min_price] %>
              </div>
              <br>
              <br>
              <%= label_tag :max_price %>
              <div style="color: black">
              <%= number_field_tag :max_price, params[:max_price] %>
              </div>
              <br>
              <br>
              <%= submit_tag "Search", :name => nil, :class => "btn btn-primary", :style => "background-color: #D4AF37; color: black;" %>  
          <% end %>

              <hr style="color: #D4AF37">

          <div style="width: 300px; color: #D4AF37;">
            <h3>Peace Peace Family!</h3>
            <p style="font-size: 20px">If You would like to sell your products to the The Black Woman Is God Stores community please click here: </p>

          

                <%= link_to 'Sell Yor Product', new_product_path, class: "btn", style: "background-color: #D4AF37; color: black; margin-bottom: 15px;" %>

          </div>
      </div>


  

    <div class="col-md-9" align="center" >
            <% @products.each do |product| %>
            <div class="col-md-3" style="margin: 0.5%;">
                <div style="border-color: #D4AF37; border-width: 1px; border-style: solid; border-radius: 5px; padding:2%; width: 200px; height: auto;"> 
                    <div style="border-color: #D4AF37; border-width: 1px; border-style: solid; border-radius: 5px; padding:2%;">
                      
                        <%= link_to product do %>
                            <%= image_tag(product.picture, :class => "thumbs", :id => "thumbs") %>
                        <% end %>
                      
                    </div>
                       <h4><%= product.title %></h4>
                        <h3><strong><%= number_to_currency(product.price) %></strong></h3>
                        <p><%= product.category.name %></p>
                        <p><em>Seller:</em><br> <%= link_to product.user.username, user_path(product.user), :style => "color: #D4AF37" %></p>
                    <div>
                      
                    </div>
                </div>
              </div>
            <% end %> 
          
      </div> 
  </div>

    <div class="row" style="margin-left: 5%">
      <%= paginate @products %>
    </div>
    
 </div>     


