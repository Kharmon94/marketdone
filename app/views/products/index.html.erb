<div class="row">
  <div class="col-md-12 center" align="center">
    <h3><strong>Recent Products</strong></h3>
  </div>
</div>


  
  <div class="row" id="prod_row">
    
      <div class="col-md-3">
          <div class="list-group" style="margin-top: 4%">
            <% @categories.each do |category| %>
                <%= link_to(category.name, category, :class => "list-group-item") %>
            <% end %>
          </div>
      </div>

    <div class="col-md-9" align="center">
        <% @products.each do |product| %>
          <div  id="t_backdrop">
            <!-- <div id="thumbnail_p"> -->
