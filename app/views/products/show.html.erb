  <div class="form-group">
      <%= render 'search_form' %>
    </div>
<div class="row">
  <div class="col-md-6">
    <%= image_tag @product.image(:medium) %> 
    <h2><%= @product.title %></h2>
  </div>

  <div class="col-md-6">
    
    <p style="font-size: 25px"><em>Price: </em><%= number_to_currency(@product.price) %></p>
    <p style="font-size: 25px"><em>Shipping Price: </em><%= number_to_currency(@product.shipping_cost) %></p>
    <p style="font-size: 25px"><em>Color:</em> <%= @product.color %></p>
    <p style="font-size: 25px"><em>Condition:</em> <%= @product.condition %></p>
    <p style="font-size: 25px"><em>Description:</em> <%= @product.description %></p>
    <p style="font-size: 25px"> Seller: <%= link_to @product.user.username, user_path(@product) %></p><br>
    
      <%= link_to "Buy It Now", new_product_order_path(@product), class: "btn btn-primary", style: "margin-top: 5%", data: { no_turbolink: true } %>
    
    
  </div> 


  
</div>

  <div class="row" >

    <div class="col-md-12" style="margin-top: 5%" id="review_row" >
        <%= link_to "Add Review", new_product_review_path(@product), :class => "btn btn-primary" %>
      <div id="review_dis">

            <%= render @product.reviews %>
      </div>
      
 
    </div>
  </div>

      <% if user_signed_in? %>
        <% if @product.user.id == current_user.id %>
          <div class="row m-4">
            <div class="col text-center">
              <%= link_to 'Edit', edit_product_path(@product) %> |
              <%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<script>
  $('.review-rating').raty({
    path: '/assets',
    readOnly: true,
    score: function(){
      return $(this).attr('data-score')
    }
  });
</script>