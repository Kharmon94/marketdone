  <div class="form-group">
      <%= render 'search_form' %>
    </div>
<div class="row">
  <div class="col-md-6">
    <%= image_tag @product.image(:medium) %> 
  </div>

  <div class="col-md-6">
    <h3><%= @product.title %></h3>
    <p><%= number_to_currency(@product.price) %></p>
    <p><%= @product.description %></p>
    <p><em>Tags:<em> <%= raw @product.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></p>
    <div class="center">
      <%= link_to "Buy It Now", new_product_order_path(@product), class: "btn btn-primary" %>
    </div>
  </div>
  
</div>


      <% if user_signed_in? %>
        <% if @product.user.id == current_user.id %>
          <div class="row m-4">
            <div class="col text-center">
              <%= link_to 'Edit', edit_product_path(@product) %> |
              <%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
