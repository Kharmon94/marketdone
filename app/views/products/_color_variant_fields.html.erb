
	<fieldset style="margin: 3%;">
		<div class="row">
			<div class="col-md-3">
				<%= form.label :color %>
		  		<%= form.text_field :color, class: "form-control" %>


			</div>
			<div class="col-md-3">
				<%= form.hidden_field :_destroy %>
  				<%= link_to "remove", '#', class: "remove_fields" %>
			</div>
		</div>
		<br>




		<%= form.fields_for :size_variants do |builder| %>
		  <div class="row">
		  			  <%= render 'size_variant_fields', form: builder %>
		  </div>


		<% end %>
		<div>
				<h4>Remove Size</h4>
				<%= link_to_add_fields "Add Size", form, :size_variants %>
		</div>


	</fieldset>

