
<div class="center">
   <h2 style="color: #D4AF37">Followers</h2>
</div>

<% if @user_followers.any? %>
  <% @user_followers.each do |f| %> 
    <div class="row" data-aos="fade-up" data-aos-duration="1500">
      
      <table class="col-md-12 table" align="center">

        <tr>
          <td class="center" align="center" style="background-color: #D4AF37;"><%= image_tag f.avatar, style: "width: 100px; height:100px" %></td>
                <td class="center" align="center"><%= link_to f.username, user_path(f.id), :style => "color: #D4AF37;" %></td>
                <td class="center" align="center" style="word-wrap: break-word; color: #D4AF37"><%= f.bio %></td>
                <td>
                	
                  <% if current_user.following?(f) %>

                    <%= link_to('Unfollow', unfollow_user_path(f.id), :style => "color: black; background-color: #D4AF37", class: "btn", method: :post) %>

                        <% else %>

                    <%= link_to('Follow', follow_user_path(f.id), :style => "color: black; background-color: #D4AF37", class: "btn", method: :post) %>

                  <% end %>
          </td>

            </tr>
          </table>
    </div>
  <% end %>
<% end %>




