<div class="container">
  <div class="row" style="margin-top: 7%;">
   
      <div class="col-md-7" align="center">

          <% if @user.id == current_user.id %>
            <%= image_tag @user.image(:thumb), id: "profile_pic" %> 
            <h2>Hey <%= @user.username %>!<h2>
            <%= link_to " Conversations", conversations_path %>
            <% else %>
            <strong><h3><%= @user.username %>'s Profile</h3></strong>
            <%= link_to "Message", new_conversation_path %>
          <% end %>
            
      </div>

      <div class="col-md-5" align="center">
            <div class="col d-flex justify-content-center">
              <div class="row">
                <div class="col text-center pt-3">
                  <h4 class="font-weight-bold font-heading mb-3"><strong>Bio</strong></h4>
                  <p class="font-small"><%= @user.bio %></p>
                </div>
                <div style="background-color: lavender; border-radius: 10px;">
                  <div>
                    <h4>Followers</h4>
                    <%= @user.followers_count %>
                  </div>
                  <div>
                    <%= link_to('Follow', follow_user_path(@user), method: :post) %>
                    <%= link_to('Unfollow', unfollow_user_path(@user), method: :post) %>
                  </div>
                </div>

              </div>
            </div>
      </div>
        
      
   
  </div>



  <!-- if current user show "connect with stripe button, otherwise show "message reader" button -->
 


<div class="row" style="margin-top: 5%" align="center">
  <!-- ################# Business ################# -->
    <% if @user.id == current_user.id %>
      <h3 class="font-heading text-center">My Business</h3>
      <% else %>
      <h3 class="font-heading text-center"><%= @user.username %>'s Business</h3>
    <% end %>

    <% @businesses.each do |business| %>
      <% if business.user.id == @user.id %>

          <div class="col-md-12" align="center">
            <%= image_tag business.image.url(:medium), class: "product-overview-image" %>
                <h4 class="font-heading pt-2">
                  <%= business.title %>
                </h4>
            <%= link_to "View Details", business, target: "_blank", class: "btn-blue btn font-white mt-5", :method => :get %>
              <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                  Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "View", business, class: "btn btn-link" %></li>
                  <li><%= link_to "Edit", edit_business_path(business), class: "btn btn-link" %></li>
                  <li><%= link_to 'Destroy', business, method: :delete, data: { confirm: "Are you sure? Remember to cancel subscription please email Theblackwomanisgodstores@gmail.com. You Are only allowed ONE business on the site if subscribed" }, class: "btn btn-link" %></li>
                </ul>
              </div>
          </div>
              
      <% end %>
    <% end %>
</div>

<div class="row" style="margin-top: 5%">
    <% if @user.id == current_user.id %>
      <h3 class="font-heading text-center">My Products</h3>
      <h4><em><strong>Please Remember to Check/Send for Tracking Numbers Within 48 hours of Every Sale/Purchase Within your email or stripe account. <em>Customers Email should be located within stripe!</em></strong></em></h4>
      <% else %>
      <h3 class="font-heading text-center"><%= @user.username %>'s Products</h3>
    <% end %>

      <% if @user.provider == nil %>
          
          <% if @user.id == current_user.id %>
            <div class="panel panel-default">
              <div class="panel-header text-center">
                <h4>
                  You wont be able to sell items until you register with Stripe!
                </h4>
              </div>
              <div class="panel-body text-center">
                <%= link_to 'Connect', stripe_url, class: 'btn btn-lg btn-info', target: '_blank' %>
              </div>
            </div>
          <% end %>  

        
      <% end %>
</div>

<div class="row" id="prod_row" style="margin-top: 2%">
  <!-- ################# Products ################# -->



   <% @products.each do |product| %>
    <div id="t_backdrop">
      <div class="col-md-3 center" id="thumbnail_p" align="center">
     
          <% if product.user.id == @user.id %>

                <%= image_tag product.image.url(:thumb), class: "product-overview-image" %>
                    <h4 class="font-heading pt-2">
                      <%= product.title %>
                    </h4>
                    <p>
                      <%= product.price %>
                    </p>
                <%= link_to "View Details", product, target: "_blank", class: "btn-blue btn font-white mt-5", :method => :get %>
                  <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                      Action <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                      <li><%= link_to "Edit", edit_product_path(product), class: "btn btn-link" %></li>
                      <li><%= link_to 'Destroy', product, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
                    </ul>
                  </div>
              </div>
                  
          <% end %>
      
      </div>
        <% end %>
    </div> 


</div>

