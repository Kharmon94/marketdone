<p id="notice"><%= notice %></p>

<div class="row">
  <div class="form-group">
    <%= render 'search_form', class: "form-control" %>
  </div>
</div>

<h2>
  <%= @state.name %>
</h2>

<%= form_tag('businesses', :remote => true) do %>
  <%= select_tag "category", options_from_collection_for_select(BusinessCategory.all, "id", "name"),  { :include_blank => true , :class => "product_select"} %>
  <%= submit_tag 'Filter' %>
<% end %>

    <div class="col-md-8">
      <table class="table table-striped table-bordered">
      
        <tr>
          <th class="center">Image</th>
          <th class="center">Name</th>
          <th class="center">Description</th>
          <th class="center">Owner</th>
          <th class="center">City</th>
      </tr>
      
      <% @businesses.each do |business| %>

      <tr>
        <th>
          <%= link_to business do %>
                <%= image_tag(business.image.url(:thumb), :class => "thumbs") %>
            <% end %>
        </th>

        <th>
          <h3><%= business.title %></h3>
        </th>

        <th>
          <p><%= business.description %></p>
        </th>

        <th>
          <strong><p><em>Owner:</em> <%= link_to business.user.profile.username, profile_path(current_user) %></p></strong>
        </th>

        <th>
          <p> <%= business.city %></p>
        </th>

            
      </tr>

      <% end %> 
      </table>
     
    </div>
</div>
<div class="row">
  <% if user_signed_in? %>
    <%= link_to 'New business', new_business_path, class: "btn btn-link" %>
  <% end %>
</div>

<%= link_to 'Back', states_path %>


