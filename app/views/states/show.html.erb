<p id="notice"><%= notice %></p>

<div class="row">
  <div class="form-group">
    <%= render 'search_form', class: "form-control" %>
  </div>
</div>

<h2>
  <%= @state.name %>
</h2>
<div class="row">
      <div class="col-md-3">
            <table>
              <thead>
                <tr>
                  <th>Category</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @business_categories.each do |business_category| %>
                  <tr>
                    <td><%= link_to(business_category.name, business_category) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
      </div>
    <div class="col-md-7">
    	<% @businesses.each do |business| %>

    		<div class="col-md-3">
            <div class="thumbnail">
            <%= link_to business do %>
                <%= image_tag(business.picture.url(:thumb), :class => "thumbs") %>
            <% end %>
              <div class="caption">
                <h3><%= business.title %></h3>
              
              </div>
            </div>
          </div>

    	<% end %>
    </div>
</div>
<div class="row">
  <% if user_signed_in? %>
    <%= link_to 'New business', new_business_path, class: "btn btn-link" %>
  <% end %>
</div>

<%= link_to 'Back', states_path %>


