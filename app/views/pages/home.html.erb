    <a href="#homeproducts">
      <img src="https://s3.us-east-2.amazonaws.com/ypmarketnew/assets/icon_017280_256.png" style="width: 40px; height: 40px; a:hover: none;" align="center">
    </a>
</div>

<hr>


      <div class="row" id="homeproducts" align="center">
        <div class="col-md-12" align="center">
          <img src="https://s3.us-east-2.amazonaws.com/ypmarketnew/assets/STORE+GOLD.png" style="width: 250px; height: 250px" >
        </div>
      </div>

      <div class="row"  style="background-image: url(https://s3.us-east-2.amazonaws.com/ypmarketnew/assets/bacground1440.png); border-radius: 20px">
        <div class="col-md-12" align="center">
            <% @products.each do |product| %>

              <div  id="t_backdrop">
                  <div class="col-md-3" style="margin-top: 2%; height: 100% !important">
                      <div class="thumbnail" style="height: 80% !important">
                          <%= link_to product do %>
                            <div style=" height: 110% !important">
                              <%= image_tag(product.image.url(:thumb), :class => "thumbs", :id => "thumbs") %>
                            </div>
                           
                          <% end %>
                          <div class="caption" align="center" style="width: 125px; height: 250px; padding: 3%; word-wrap: break-word">
                            <h4><%= product.title %></h4>
                            <p><%= number_to_currency(product.price) %></p>
                            <p><%= link_to product.category.name, category_path(product.category) %></p>
                            <p><em>Sold By:</em> <%= link_to product.user.username, user_path(product.user) %></p>
                          </div>
                      </div>
                  </div>
              </div>  

            <% end %> 
          
        </div>

        <div class="row" align="center" >
          <%= button_to "ENTER STORE", products_path, class: "btn", style: "background-color: #D4AF37; color: black; margin-bottom: 15px;" %>
        </div>

      </div>



      <hr>

