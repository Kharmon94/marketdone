                                <div style=" height: 110% !important">
                                  <%= image_tag(product.image.url(:medium), :class => "thumbs", :id => "thumbs") %>
                                </div>
                            </div>

                           
                          <% end %>
                          <div class="caption" align="center" style=" width: 250px; height: 200px; padding: 3%; word-wrap: break-word; color: #D4AF37 !important; font-size: 17px; opacity: 0.85" >
