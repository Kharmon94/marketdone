      <div class="row"  style="/*background-image: url(https://s3.us-east-2.amazonaws.com/ypmarketnew/assets/bacground1440.png);*/ border-radius: 20px">
        <div class="col-md-12" align="center">
            <% @products.each do |product| %>

              <div  id="t_backdrop">
                  <div class="col-md-3" style=" height: 100% !important">
                      <div class="thumbnail" style="height: 60% !important;">
                          <%= link_to product do %>
