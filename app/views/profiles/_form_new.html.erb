<div class="container">
  <div class="row bg-white p-4">
    <div class="col">

      <%= form_for @profile, url: "#{profiles_path}", html: { multipart: true } do |form| %>
        <% if profile.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

            <ul>
            <% profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>


        <div class="field row">
          <div class="col-3">
            <%= form.label :username, class: "pt-1 font-weight-bold" %>
          </div>
          <div class="col-8">
            <%= form.text_field :username, id: :profile_username, class: "width-large p-1 rounded" %>
          </div>
        </div>

        <div class="field row mt-3">
          <div class="col-3">
            <%= form.label :first_name, class: "pt-1 font-weight-bold" %>
          </div>
          <div class="col-8">
            <%= form.text_field :first_name, id: :profile_first_name, class: "width-large p-1 rounded" %>
          </div>
        </div>

        <div class="field row mt-3">
          <div class="col-3">
            <%= form.label :last_name, class: "pt-1 font-weight-bold" %>
          </div>
          <div class="col-8">
            <%= form.text_field :last_name, id: :profile_last_name, class: "width-large p-1 rounded" %>
          </div>
        </div>

        <div class="field row mt-3">
          <div class="col-3">
            <%= form.label :street_address, class: "pt-1 font-weight-bold" %>
          </div>
          <div class="col-8">
            <%= form.text_field :street_address, id: :profile_street_address, class: "width-large p-1 rounded" %>
          </div>
        </div>

        <div class="field row mt-3">
          <div class="col-3">
            <%= form.label :city, class: "pt-1 font-weight-bold" %>
          </div>
          <div class="col-8">
            <%= form.text_field :city, id: :profile_city, class: "width-large p-1 rounded" %>
          </div>
        </div>


        <div class="field row mt-3">
          <div class="col-3">
            <%= form.label :state, class: "pt-1 font-weight-bold" %>
          </div>
          <div class="col-8">
            <%= form.text_field :state, id: :profile_state, class: "width-large p-1 rounded" %>
          </div>
        </div>

        <div class="field row mt-3">
          <div class="col-3">
            <%= form.label :postcode, class: "pt-1 font-weight-bold" %>
          </div>
          <div class="col-8">
            <%= form.text_field :zipcode, id: :profile_zipcode, class: "width-large p-1 rounded" %>
          </div>
        </div>

        <div class="field row mt-3">
          <div class="col-3">
            <%= form.label :bio, class: "pt-1 font-weight-bold" %>
          </div>
          <div class="col-8">
            <%= form.text_field :bio, id: :profile_bio, class: "width-large p-1 rounded" %>
          </div>
        </div mt-3>


        <div class="actions row mt-5 mb-3">
          <div class="col d-flex justify-content-center">
            <%= form.submit %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
